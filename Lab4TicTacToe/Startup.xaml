<Window x:Class="Lab4TicTacToe.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4TicTacToe"
        mc:Ignorable="d"
        Title="Startup" Height="450" Width="800">
    <Grid>
        <Label Content="Choose X or O to continue" Margin="294,48,294,327" FontSize="16"></Label>
        <Image x:Name="Img_O" Source="/Images/tic-tac-toe_o.png" Margin="449,128,101,89" MouseDown="Choose_Start" />
        <Image x:Name="Img_X" Source="/Images/tic-tac-toe_x.png" Margin="81,128,465,89" MouseDown="Choose_Start" />
        <Button Content="Change O to X" HorizontalAlignment="Center" Margin="0,151,0,0" VerticalAlignment="Top" Click="Button_Click"/>


    </Grid>
</Window>
